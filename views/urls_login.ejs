<!DOCTYPE html>
<html lang="en">
  <head>
  	<title>TinyApp-Login</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <!-- LOGOUT FORM -->
    <form method="POST" action="/logout" style="text-align: right; ">
      <input type="submit" name="logout" value="logout">
    </form>
    	<!-- LOGIN FORM -->
    <form action="/login" method="POST" style="margin:100px; padding: 50px">
      <!--<label for="username" style="font-weight: 40px; padding-bottom: 50px">Enter a :</label> -->
      <p>Email</p><input id="email" type="email" name="email" placeholder="enter your email" style="width: 300px">
      <p>Password</p><input id="password" type="password" name="password" placeholder="password" style="width: 300px">
      <input type="submit" name="login" value="login">
      
      <% if(locals.error){ %>
      <p style="color: tomato;"><%= error %></p>
      <% } %>
    
    </form>


  </body>
</html>